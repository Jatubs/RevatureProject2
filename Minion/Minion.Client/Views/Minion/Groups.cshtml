
@{
    ViewBag.Title = "Groups";
}

@model Minion.Client.Models.Groups

<h2>Groups</h2>
<div class="row">
    <div class="col-md-4">
        <h3>Groups</h3>
        <table>
            <tr>
                @foreach (var item in Model.Group)
                {
                <tr>
                    <td>
                        <p><a href="/Minion/Group"> @Html.DisplayFor(modelItem => item)</a></p>
                    </td>
                </tr>

            }
                </tr>

            </table>
            <form action="/Minion/AddFriend">
                </p>Create Group: @Html.TextBoxFor(m => m.GroupName)</p>
                <button type="submit">Create</button>
            </form>
        </div>
        <div class="col-md-4">
            <h3>Name Of Current Group</h3>
            <p>
                This will be the chat screen.
            </p>
            <p><a class="btn btn-default" href="/Minion/Post">Post</a></p>
        </div>
        <div class="col-md-4">
            <h3>Users</h3>
            <p>
                This will be a List of users in the room.
            </p>
        </div>
    </div>

